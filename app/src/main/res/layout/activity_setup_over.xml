<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="防盗功能展示"
        style="@style/TitleStyle" />
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="安全号码"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_phone"
            android:text="0000"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"/>
    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="防盗是否开启"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_lock"
            android:textSize="18sp"
            android:text="已开启"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/lock"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"/>
    <TextView
        android:id="@+id/tv_reset_setup"
        android:text="重新进入设置向导"
        android:background="@drawable/selector_resetup_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_margin="2dp"
        android:paddingLeft="3dp"
        android:textColor="#000"/>
    <View
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"/>
    <TextView
        android:text="重新进入设置向导"
        android:background="@drawable/bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_margin="2dp"
        android:paddingLeft="3dp"
        android:textColor="#000"/>
    <TextView
        android:text="GPS追踪：#*location*#"
        style="@style/ItemStyle" />
    <TextView
        android:text="播放背景音乐：#*alarm*#"
        style="@style/ItemStyle" />
    <TextView
        android:text="数据销毁：#*wipedata*#"
        style="@style/ItemStyle" />
    <TextView
        android:text="远程锁屏：#*lockscreen*#"
        style="@style/ItemStyle" />
</LinearLayout>
