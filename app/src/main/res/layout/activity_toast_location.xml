<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <!--包含图片的LinearLayout在相对布局中，所在位置规则需要相对布局提供-->
    <Button
        android:id="@+id/bt_top"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/buttom_ok"
        android:text="将小黄人移到任意位置"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/bt_bottom"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttom_ok"
        android:text="将小黄人移到任意位置"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:id="@+id/l_drag"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/colorBlue"
        android:gravity="center_vertical"
        android:padding="2dp"
        >

        <ImageView
            android:id="@+id/iv_icon"
            android:src="@drawable/minman"
            android:layout_width="40dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/tv_toast"
            android:text="illuminassion"
            android:textColor="#000"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>