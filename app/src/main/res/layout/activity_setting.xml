<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:text="设置中心"
        style="@style/TitleStyle"/>
    <view.SettingItemView
        xmlns:kmsafe="http://schemas.android.com/apk/res/com.julse.jules.kmsafe"
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        kmsafe:destitle = "自动更新设置"
        kmsafe:desoff = "自动更新已关闭"
        kmsafe:deson = "自动更新已开启">
    </view.SettingItemView>
    <view.SettingItemView
        xmlns:kmsafe="http://schemas.android.com/apk/res/com.julse.jules.kmsafe"
        android:id="@+id/siv_local_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        kmsafe:destitle = "电话归属地的显示设置"
        kmsafe:desoff = "归属地的显示已关闭"
        kmsafe:deson = "归属地的显示已开启">
    </view.SettingItemView>
    <view.SettingItemView
        xmlns:kmsafe="http://schemas.android.com/apk/res/com.julse.jules.kmsafe"
        android:id="@+id/siv_blacknumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        kmsafe:destitle = "黑名单拦截设置"
        kmsafe:desoff = "黑名单拦截已关闭"
        kmsafe:deson = "黑名单拦截已开启">
    </view.SettingItemView>
</LinearLayout>
